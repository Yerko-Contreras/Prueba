<h1>Chats</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>user_id</th>
      <th>Contenido</th>
      <th>Id de Turno</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.user.username %></td>
        <td><%= chat.user.id %></td>
        <td><%= chat.content %></td>
        <td><%= chat.turno.id %></td>
        <td><%= link_to 'Show', chat %></td>
        <td><%= link_to 'Destroy', chat, method: :delete, data: { confirm: '¿Estás Segur@?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

