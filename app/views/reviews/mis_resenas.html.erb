<p id="notice"><%= notice %></p>

<h1>Reseñas recibidas</h1>

<table>
  <thead>
    <tr>
      <th>Puntuación</th>
      <th>Contenido</th>
      <th>Autor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
      <% if review.receiver == current_user %>
        <td><%= review.score %></td>
        <td><%= review.content %></td>
        <td><%= review.user.username %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<h1>Reseñas realizadas</h1>

<table>
  <thead>
    <tr>
      <th>Puntuación</th>
      <th>Contenido</th>
      <th>Usuario reseñado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
      <% if review.user == current_user %>
        <td><%= review.score %></td>
        <td><%= review.content %></td>
        <td><%= review.receiver.username %></td>
        <td><%= link_to 'Eliminar reseña', review, method: :delete, data: { confirm: '¿Estas Segur@?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

